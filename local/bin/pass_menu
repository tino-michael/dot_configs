#!/bin/sh

TOKEN=" âž™ "

RESULT=$(\
    find ${PASSWORD_STORE_DIR} -type f -not -path "*/.git/*" |
    sed -e "s/^.*store\///" -e "s/\//${TOKEN}/g" -e 's/.gpg$//' |
    dmenu -p "Select secret file"
)

[ -z "${RESULT}" ] ||
    pass otp -c $(printf "${RESULT}" | tr "${TOKEN}" '/' | sed 's/\/\/\/\///')
