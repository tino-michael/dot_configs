[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/base_bar]
height = 30
override-redirect = true
enable-ipc = true
foreground = ${colors.foreground}
background = ${colors.background}

padding = 2
module-margin-left = 1
module-margin-right = 2

font-0 = Libertine:size=12;3
font-1 = MaterialIcons:size=12;5
font-2 = Font Awesome 5 Brands,Font Awesome 5 Brands Regular:style=Regular:size=12;3
font-3 = Font Awesome 5 Free,Font Awesome 5 Free Regular:style=Regular:size=12;3
font-4 = Font Awesome 5 Free,Font Awesome 5 Free Solid:style=Solid:size=12;3
font-5 = cryptofont:Style=Regular:size=11;3


[bar/top_bar]
inherit = bar/base_bar
bottom = false
tray-position = right

modules-left=window_title
modules-center=mpd
modules-right=pulseaudio_control backlight wlan recording_icon dunst_icon


[bar/bottom_bar]
inherit = bar/base_bar
bottom = true
modules-right=battery date

[bar/bottom_i3]
inherit = bar/bottom_bar
modules-left=i3

[bar/bottom_dwm]
inherit = bar/bottom_bar
override-redirect = true

width = 50%
offset-x = 50%

[module/window_title]
type = internal/xwindow
label-maxlen = 75


[module/date]
type = internal/date
date = %%{F#999}%Y–%m–%d%%{F-} %%{F#bbb}%a%%{F-}  %%{F#fff}%H:%M:%S%%{F-}

interval = 5




[module/mpd]
type = internal/mpd
format-online = <icon-prev> <icon-stop> <toggle> <icon-next>  <icon-repeat> <icon-random>  <bar-progress> <label-time>  <label-song>


icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 
icon-next = 
icon-random = 
icon-repeat = 

toggle-on-foreground =
toggle-off-foreground = #55

bar-progress-width = 15
bar-progress-format = %{A4:mpdseek+2: A5:mpdseek-2:}%fill%%indicator%%empty%%{A A}
bar-progress-indicator = |
bar-progress-indicator-foreground = #ff
bar-progress-indicator-font = 3
bar-progress-fill = ─
bar-progress-fill-foreground = #bb
bar-progress-fill-font = 3
bar-progress-empty = ─
bar-progress-empty-font = 3
bar-progress-empty-foreground = #44


[module/backlight]
