format-volume = <ramp-volume> <label-volume> <bar-volume>
;label-volume = %percentage%%
;label-volume = ""
label-volume-foreground = #FFF

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 

